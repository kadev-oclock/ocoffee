<%- include('partials/header') %>
<%- include('partials/nav') %>

<section class="hero2-section">
  <div class="hero-overlay">
    <h1>Notre Boutique</h1>
  </div>
</section>
<section id="cart">
  <h1>Mon Panier</h1>
  <table>
    <thead>
      <tr>
        <th class="cart-header">Nom de l'article</th>
        <th class="cart-header">Prix HT</th>
        <th class="cart-header">Quantité</th>
        <th class="cart-header">Action</th>
      </tr>
    </thead>
    <tbody>
      <% dataCart.forEach(coffe => { %>
      <tr>
        <td>
          <div class="item-info">
            <img src="/images/coffees/<%= coffe.reference %>.png" alt="<%= coffe.name %>">
            <h5><%= coffe.name %></h5>
          </div>
        </td>
        <td><%= coffe.price %></td>
        <td><input type="number" value="2" class="quantity-input"></td>
        <td>
          <form action="/panier/remove/<%= coffe.id %>" method="POST">
            <button type="submit" class="remove-item">Supprimer</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <div class="cart-total">
    <span>Total :</span> <%= totalPrice %> € 
  </div>
  <a href="/checkout" class="button">Procéder au paiement</a>
</section>

<%- include('partials/footer') %>
